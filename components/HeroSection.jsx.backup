'use client';

import { useState, useEffect, useRef } from 'react';
import { ChevronDown, Youtube, Facebook, Twitter, Mail, Phone } from 'lucide-react';

export default function HeroSection() {
  const [videoError, setVideoError] = useState(false);
  const [isVideoLoaded, setIsVideoLoaded] = useState(false);
  const videoRef = useRef(null);

  const handleVideoError = () => {
    setVideoError(true);
  };

  const handleVideoLoaded = () => {
    setIsVideoLoaded(true);
  };

  useEffect(() => {
    // Préchargement intelligent de la vidéo
    if (videoRef.current) {
      videoRef.current.load();
    }
  }, []);

  return (
    <section id="hero" className="relative min-h-screen flex items-center justify-center overflow-hidden">
      {/* Video Background */}
      <div className="absolute inset-0 w-full h-full">
        {!videoError ? (
          <>
            {/* Préchargement avec image de placeholder */}
            <div 
              className={`absolute inset-0 w-full h-full bg-gradient-to-br from-cyan-900/20 via-black to-blue-900/20 transition-opacity duration-1000 ${
                isVideoLoaded ? 'opacity-0' : 'opacity-100'
              }`}
            />
            
            <video
              ref={videoRef}
              autoPlay
              loop
              muted
              playsInline
              preload="metadata"
              onError={handleVideoError}
              onLoadedData={handleVideoLoaded}
              className={`w-full h-full object-cover transition-opacity duration-1000 ${
                isVideoLoaded ? 'opacity-100' : 'opacity-0'
              }`}
              // Attributs pour performance
              disablePictureInPicture
              disableRemotePlayback
            >
              {/* Solution CDN - Remplacez cette URL par votre vidéo hébergée */}
              <source src="https://res.cloudinary.com/votre-compte/video/upload/v1234567/hero_optimized.mp4" type="video/mp4" />
              {/* Fallback local */}
              <source src="/videos/hero.mp4" type="video/mp4" />
              <source src="/videos/hero.webm" type="video/webm" />
              <source src="/videos/Choregraphie_Neorealite.mp4" type="video/mp4" />
              Your browser does not support the video tag.
            </video>
          </>
        ) : (
          <div className="w-full h-full bg-gradient-to-br from-cyan-900/20 via-black to-blue-900/20" />
        )}
        
        {/* Gradient Overlay */}
        <div className="absolute inset-0 bg-gradient-to-b from-black/30 via-black/50 to-black/80" />
      </div>

      {/* Content */}
      <div className="relative z-10 container-custom section-padding text-center">
        <div className="max-w-6xl mx-auto">
          {/* Logo */}
          <h1 className="text-7xl md:text-[8.4rem] font-bold mb-[30px] fade-in-up font-antonio">
            <span className="gradient-text">AQUAMEDIAS</span>
          </h1>
          
          {/* Subtitle */}
          <h2 className="text-3xl md:text-[2.25rem] font-light mb-6 fade-in-up text-cyan-300 font-antonio" style={{ animationDelay: '0.3s' }}>
            SPÉCIALISTES EN IMAGES AQUATIQUES
          </h2>
          
          {/* Tagline */}
          <p className="text-xl md:text-2xl text-cyan-100/90 mb-12 fade-in-up font-cormorant" style={{ animationDelay: '0.5s' }}>
            Nous créons l&apos;impossible sous l&apos;eau depuis 2000
          </p>
          
          {/* Contact Buttons */}
          <div className="flex flex-col sm:flex-row gap-6 justify-center items-center mb-16 fade-in-up" style={{ animationDelay: '0.7s' }}>
            <a
              href="mailto:info@aquamedias.com"
              className="flex items-center gap-3 bg-black/30 backdrop-blur-sm rounded-full px-6 py-3 text-cyan-300 hover:text-white hover:bg-black/50 transition-all duration-300 group"
            >
              <Mail className="w-6 h-6 group-hover:scale-110 transition-transform duration-300" />
              info@aquamedias.com
            </a>
            <a
              href="tel:+15148138788"
              className="flex items-center gap-3 bg-black/30 backdrop-blur-sm rounded-full px-6 py-3 text-cyan-300 hover:text-white hover:bg-black/50 transition-all duration-300 group"
            >
              <Phone className="w-6 h-6 group-hover:scale-110 transition-transform duration-300" />
              514-813-8788
            </a>
          </div>
          
          {/* Social Icons */}
          <div className="flex justify-center gap-8 mb-12 fade-in-up" style={{ animationDelay: '0.9s' }}>
            {[
              { platform: 'YouTube', icon: <Youtube className="w-8 h-8" /> },
              { platform: 'Facebook', icon: <Facebook className="w-8 h-8" /> },
              { platform: 'Twitter', icon: <Twitter className="w-8 h-8" /> },
            ].map(({ platform, icon }) => (
              <a
                key={platform}
                href="#"
                className="w-16 h-16 rounded-full border-2 border-cyan-500/50 hover:border-cyan-400 hover:bg-cyan-500/20 bg-black/20 backdrop-blur-sm flex items-center justify-center transition-all duration-300 group"
                aria-label={`Follow us on ${platform}`}
              >
                <span className="text-cyan-400 group-hover:text-cyan-300 transition-colors">
                  {icon}
                </span>
              </a>
            ))}
          </div>
        </div>
      </div>
      
      {/* Scroll Indicator - Positionné par rapport à la section entière */}
      <button
        onClick={() => {
          const aboutSection = document.getElementById('about');
          if (aboutSection) {
            aboutSection.scrollIntoView({ behavior: 'smooth' });
          }
        }}
        className="absolute bottom-10 left-1/2 -translate-x-1/2 z-20 flex flex-col items-center gap-3 group cursor-pointer bounce-sync fade-in-up"
        style={{ animationDelay: '1.1s' }}
        aria-label="Scroll to About section"
      >
        {/* Icon */}
        <ChevronDown className="w-10 h-10 text-cyan-400 group-hover:text-cyan-300 transition-colors" />
        
        {/* Vertical line with gradient */}
        <div className="w-px h-20 bg-gradient-to-b from-cyan-400 to-transparent opacity-60 group-hover:opacity-100 transition-opacity" />
      </button>
    </section>
  );
}










